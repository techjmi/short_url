<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL List</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>URL Shortener</h1>

    <% if (locals.newUrl) { %>
        <!-- HTML to render if the condition is true -->
        <p>URL Generated: <a href="http://localhost:8000/url/<%= newUrl.shortID %>">http://localhost:8000/url/<%= newUrl.shortID %></a></p>
    <% } %>

    <div>
        <form method="POST" action="/url">
            <label>Enter Your Original URL</label>
            <input type="text" name='url' placeholder="https://example.com" required>
            <button type="submit">Generate</button>
        </form>
    </div>

    <h2>All Shortened URLs</h2>
    <% if (urls && urls.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Short ID</th>
                    <th>Original URL</th>
                    <th>Total Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach(url => { %>
                    <tr>
                        <td><a href="http://localhost:8000/url/<%= url.shortID %>"><%= url.shortID %></a></td>
                        <td><%= url.originalUrl %></td>
                        <td><%= url.visitHistory.length %></td> <!-- Assuming visitHistory is an array -->
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No URLs have been shortened yet.</p>
    <% } %>
</body>
</html>
